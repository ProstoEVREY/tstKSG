{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist",
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}